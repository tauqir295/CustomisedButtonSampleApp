<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MDL" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="buttonTitleTextColor">@color/black</item>
        <item name="buttonSubtitleTextColor">@color/black</item>

        <item name="buttonTitleTextSize">@dimen/textSize_16sp</item>
        <item name="buttonSubtitleTextSize">@dimen/textSize_16sp</item>

    </style>

    <style name="Theme.MDL1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="buttonTitleTextColor">?attr/colorSecondary</item>
        <item name="buttonSubtitleTextColor">?attr/colorSecondary</item>

        <item name="buttonTitleTextSize">@dimen/textSize_14sp</item>
        <item name="buttonSubtitleTextSize">@dimen/textSize_14sp</item>

    </style>

    <style name="CustomisedButton" >
        <item name="android:textColor">?attr/buttonTitleTextColor</item>
    </style>

    <style name="CustomisedButton.Title" parent="CustomisedButton">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomisedButton.SubTitle" parent="CustomisedButton">

    </style>
</resources>