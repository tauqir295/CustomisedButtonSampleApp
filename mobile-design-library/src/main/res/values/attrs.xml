<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="width" format="dimension" />
    <attr name="height" format="dimension" />
    <attr name="buttonTitleText" format="string" />
    <attr name="buttonSubtitleText" format="string" />
    <attr name="buttonTitleTextColor" format="color" />
    <attr name="buttonSubtitleTextColor" format="color" />
    <attr name="buttonTitleTextSize" format="dimension" />
    <attr name="buttonSubtitleTextSize" format="dimension" />
    <attr name="icon" format="reference" />
    <attr name="iconTintColor" format="color" />
    <attr name="inputTextColor" format="color" />
    <attr name="defaultTextColor" format="color" />

    <declare-styleable name="CustomizedButton">
        <attr name="width" />
        <attr name="height" />
        <attr name="buttonTitleTextColor" />
        <attr name="buttonSubtitleTextColor" />
        <attr name="icon" />
        <attr name="buttonTitleText" />
        <attr name="buttonSubtitleText" />
        <attr name="buttonTitleTextSize" />
        <attr name="buttonSubtitleTextSize" />
        <attr name="iconVisible" format="boolean" />
        <attr name="subtitleVisible" format="boolean" />
        <attr name="buttonState">
            <flag name="none" value="0" />
            <flag name="disabled" value="1" />
            <flag name="enabled" value="2" />
        </attr>
    </declare-styleable>

</resources>